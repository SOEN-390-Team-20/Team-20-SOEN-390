{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint",
    "lint:all": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "start": "cross-env NODE_ENV=production node ./bin/www",
    "dev": "cross-env NODE_ENV=development nodemon -L ./bin/www --ignore client --exec \"npm run lint:fix && node\"",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --watch",
    "build": "cd ./client && npm install && npm run build",
    "dev:build": "npm run build && npm run dev",
    "start:build": "npm run build && npm run start"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "~2.6.9",
    "dotenv": "^16.0.0",
    "express": "~4.16.1",
    "express-async-errors": "^3.1.1",
    "mongoose": "^6.1.8",
    "mongoose-unique-validator": "^3.0.0",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.5.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["client"]
  }
}
